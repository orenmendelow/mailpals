<div data-controller="custom-questions">
  <div class="form-group">
    <%= form.check_box :use_custom_questions, 
        data: { action: "custom-questions#toggle" } %>
    <%= form.label :use_custom_questions, t("clubs.options.use_custom_questions.title") %>
    <p class="text-sm text-gray-600"><%= t("clubs.options.use_custom_questions.description") %></p>
  </div>

  <div data-custom-questions-target="options" class="hidden space-y-4">
    <div class="form-group">
      <%= form.check_box :custom_questions_only %>
      <%= form.label :custom_questions_only, t("clubs.options.custom_questions_only.title") %>
      <p class="text-sm text-gray-600"><%= t("clubs.options.custom_questions_only.description") %></p>
    </div>

    <div>
      <%= form.label :custom_questions, "Custom Questions", class: "block font-medium" %>
      <p class="text-sm text-gray-600 mb-2">Enter one question per line</p>
      <%= form.text_area :custom_questions, 
          rows: 10, 
          class: "w-full border rounded p-2",
          placeholder: "What's your biggest work achievement this quarter?\nWhat challenges are you currently facing in your role?",
          data: { custom_questions_target: "textarea" } %>
    </div>
  </div>
</div>