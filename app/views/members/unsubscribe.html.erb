<div class="max-w-2xl mx-auto py-8 px-4">
  <div class="bg-white rounded-lg shadow p-6">
    <h1 class="text-2xl font-bold mb-4">Unsubscribe from <%= @club.title %></h1>
    
    <% if @error %>
      <div class="bg-red-50 text-red-700 p-4 rounded-md mb-4">
        <%= @error %>
      </div>
    <% end %>
    
    <div class="mb-6">
      <p class="text-gray-600">
        Are you sure you want to unsubscribe from <%= @club.title %> communications?
      </p>
    </div>

    <%= form_tag unsubscribe_club_path(token: params[:token]), method: :delete, class: "space-y-4" do %>
      
      <div class="flex items-center justify-end space-x-4">
        <%= link_to "Cancel", root_path, 
            class: "text-gray-600 hover:text-gray-800" %>
        <%= submit_tag "Unsubscribe",
            class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700",
            data: { confirm: "Are you sure you want to unsubscribe?" } %>
      </div>
    <% end %>
  </div>
</div>